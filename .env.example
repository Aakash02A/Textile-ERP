# Textile ERP Environment Configuration
# Copy this file to .env and update values as needed

# Application
APP_NAME=Textile ERP
APP_VERSION=2.0.0
DEBUG=True
SECRET_KEY=your-super-secret-key-min-32-characters-long-change-in-production

# Database
DATABASE_URL=postgresql://erp_user:erp_password_2024@db:5432/textile_erp
SQLALCHEMY_ECHO=False

# Redis
REDIS_URL=redis://redis:6379/0

# Security
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email (Optional - Phase 2)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ML Configuration (Phase 3)
ENABLE_ML=False
ML_MODELS_DIR=ml_modules/models

# Celery Configuration (Phase 2)
ENABLE_CELERY=False
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000
