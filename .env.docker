# Docker Environment Configuration for Textile ERP
# This file is used by docker-compose.yml for containerized deployment
# Copy this to .env and customize for your deployment

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=textile_erp_password_2024
POSTGRES_DB=textile_erp
POSTGRES_PORT=5432

# ============================================
# BACKEND CONFIGURATION
# ============================================
BACKEND_PORT=8000

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-must-be-32-chars-min
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
APP_NAME=Textile ERP Backend
APP_VERSION=1.0.0
APP_ENV=production
DEBUG=False

# CORS Settings (Allow requests from these origins)
CORS_ORIGINS=["http://localhost", "http://localhost:3000", "http://localhost:8080", "http://localhost:5050"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============================================
# PGADMIN CONFIGURATION
# ============================================
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ============================================
# NGINX CONFIGURATION (Optional)
# ============================================
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# ============================================
# PRODUCTION SETTINGS (Update these for production)
# ============================================
# For production, update:
# 1. POSTGRES_PASSWORD - Use a strong password
# 2. SECRET_KEY - Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 3. DEBUG - Set to False
# 4. CORS_ORIGINS - Restrict to your actual domain
